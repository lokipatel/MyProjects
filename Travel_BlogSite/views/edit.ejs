<%include ./partials/header%>


<div class="container">
    <h1 style="gmtext-align: center">
        Edit <%=char.name%>
    </h1>

    <div class="row">
        <div style="width:30%;margin:25px auto">
            <form action="/char_page/<%=char._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="char[name]" value="<%=char.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="char[url]" value="<%=char.url%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="char[Description]" value="<%=char.Description%>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location"  value="<%= char.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%include ./partials/footer%>
